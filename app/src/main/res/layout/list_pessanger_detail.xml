                android:text="Verify" />
-->
            <ToggleButton
                android:id="@+id/BtnCheck"
                android:layout_width="30dp"
                android:layout_height="22dp"

                android:textOn="       Verified"
                android:textOff=""
                android:background="@drawable/check_selector"
                android:text="Check" />
            <ToggleButton
                android:id="@+id/BtnAllocateSeat"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:textOn="       Allocated"
                android:textOff=""
                android:background="@drawable/allocate_seat"
                android:text="Allocate" />
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPNR"
                android:textSize="12sp"
                android:text="PNR:"></TextView>
            <TextView
                android:paddingLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPNR"
                android:textStyle="bold"
                android:textSize="15sp" >
            </TextView>
          <!--  <TextView
                android:layout_width="wrap_content"
