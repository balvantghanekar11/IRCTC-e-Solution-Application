                android:id="@+id/lblName">

            </TextView>
            <TextView
                android:paddingLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/txtName"
                android:textSize="14sp"

                >
            </TextView>

